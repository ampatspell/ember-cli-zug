{{#ui-block/rows as |rows|}}
  {{#rows.header}}
    {{collection.title}}
  {{/rows.header}}
  {{#if collection.query.isLoading}}
    {{#rows.row}}
      Loadingâ€¦
    {{/rows.row}}
  {{else}}
    {{#each collection.models as |model|}}
      {{#rows.row click=(action 'select' model)}}
        {{component row model=model selected=(eq model selection)}}
