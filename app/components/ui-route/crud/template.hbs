{{#ui-block/master-detail as |md|}}

  {{#md.master}}
    {{ui-route/crud/master/people collection=crud.people selection=crud.selection select=(action 'select')}}
    {{ui-route/crud/master/blogs collection=crud.blogs selection=crud.selection select=(action 'select')}}
  {{/md.master}}

  {{#md.detail}}
    {{ui-route/crud/detail
      selection=crud.selection
      isEditing=crud.isEditing
      edit=(action 'edit')
      done=(action 'done')
    }}
  {{/md.detail}}

{{/ui-block/master-detail}}

