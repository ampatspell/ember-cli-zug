{{#ui-block/rows as |rows|}}

  {{#rows.header}}
    Queries
  {{/rows.header}}

  {{#rows.row}}
    <div class="src">
      type: 'array'
      query: db => db.collection('people').orderBy('name', 'asc').limit(3)
    </div>
    <div>{{arrayFromQuery}}</div>
    <div class="small">
      {{#each arrayFromQuery.content as |model|}}
        <div>{{model}}</div>
      {{/each}}
    </div>
  {{/rows.row}}

  {{#rows.row}}
    <div class="src">
      type: 'array'
      query: db => db.collection('people').limit(3)
    </div>
    <div>{{arrayFromCollection}}</div>
    <div class="small">
      {{#each arrayFromCollection.content as |model|}}
        <div>{{model}}</div>
      {{/each}}
    </div>
  {{/rows.row}}

  {{#rows.row}}
    <div class="src">
      type: 'array'
      query: db => db.doc('people/ampatspell')
    </div>
    <div>{{arrayFromDocument}}</div>
    <div class="small">
      {{#each arrayFromDocument.content as |model|}}
        <div>{{model}}</div>
      {{/each}}
    </div>
  {{/rows.row}}

  {{#rows.row}}
    <div class="src">
      type: 'single'
      query: db => db.collection('people').orderBy('name', 'asc')
    </div>
    <div>{{singleFromQuery}}</div>
    <div class="small">
      {{singleFromQuery.content}}
    </div>
  {{/rows.row}}

  {{#rows.row}}
    <div class="src">
      type: 'single',
      query: db => db.doc('people/ampatspell')
    </div>
    <div>{{singleFromDocument}}</div>
    <div class="small">
      {{singleFromDocument.content}}
    </div>
  {{/rows.row}}

{{/ui-block/rows}}

