{{#ui-block/rows as |rows|}}

  {{#rows.header}}
    {{model.pristine.name}}
  {{/rows.header}}

  {{#rows.row}}
    <label>Name</label>
    {{input value=model.edit.name}}
  {{/rows.row}}

  {{#rows.row}}
    <label>Email</label>
    {{input value=model.edit.email}}
  {{/rows.row}}

  {{#if model.blogs.isLoading}}
    {{#rows.row}}
      Loading blogsâ€¦
    {{/rows.row}}
  {{else}}
    {{#rows.row}}
      {{#each model.blogs.content as |blog|}}
        <div>
          <input type="checkbox"
            checked={{eq blog.owner model.edit}}
            onchange={{action (action 'toggleBlog' blog model.edit)
            value='target.checked'}}
          />
          {{blog.title}}
        </div>
      {{/each}}
    {{/rows.row}}
  {{/if}}

  {{#rows.row}}
    <button {{action 'save'}}>Save</button>
    <button {{action 'done'}}>Cancel</button>
  {{/rows.row}}

{{/ui-block/rows}}
